
@{
    ViewBag.Title = "Login";
    Layout = null;
}
@model CrossSell_App.Models.UserDetails

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap-theme.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
    <style type="text/css">
        .bs-example {
            height: 220px;
        }

        .centerlook {
            padding-left: 400px;
            font-weight: bold;
            width: 1000px;
        }

        .error {
            padding-left: 400px;
            font-weight: bold;
            width: 1000px;
            color: red;
        }

        .loginbtn {
            padding-left: 500px;
        }
    </style>

</head>
<body>
    @Styles.Render("~/Content/css")
    <div style="margin-top:-30px;width:100%;float:left;">
        <div style="width:50%;float:left;">
            <img src="https://www.capgemini.com/wp-content/themes/capgemini-2018-02/assets/images/logo.svg" alt="Capgemini Worldwide" class="logo" style="float:left;margin-left: 40px;margin-top: 15px;">
            <img src="http://psa.sogeti.nl/i/logo_sogeti.gif" alt="Sogeti" class="logo" style="float:left;margin-left: 40px;margin-top: 15px;">
        </div>
        <div style="width:50%;float:left;"><h1>Cross Cell</h1></div>
    </div>
    <div style="background-color: black;margin-top: 38px;"><hr /></div>

    @using (Html.BeginForm())
    {
        <div class="bs-example" style="margin-top:8% ; height:275px">

            <div class="form-group centerlook">
                <h1> Login </h1>
            </div>
            <div class="form-group centerlook">
                <label>User Name:</label>
                @Html.EditorFor(model => model.UserName) *
                @Html.ValidationMessageFor(model => model.UserName)
            </div>
            <div class="form-group centerlook">
                <label> &nbsp Password:</label>
                @Html.EditorFor(model => model.Password) *
                @Html.ValidationMessageFor(model => model.Password)

            </div>
            <div class="form-group centerlook">
                <label style="padding-left:3em">Role:</label>
                @*@Html.DropDownList("GenreId", String.Empty)*@
                <select name="Role">
                    <option value="Admin">Admin</option>
                    <option value="Customers">Customers</option>
                </select>
            </div>

            <div class="loginbtn">

                <input type="submit" value="Login" class="btn btn-primary" />

            </div>
        </div>
    }
</body>
</html>   